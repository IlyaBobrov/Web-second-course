@{
    ViewData["Title"] = "Edit car";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit:</title>
</head>
<body>
    <form method="post" class="form-horizontal" role="form">
        <input type="hidden" value="@ViewBag.Id" name="Id" />
        <p>Fill the fields for editing perfume data:</p>
        <div class="form-group">
            <label for="Name" class="col-md-2 control-label">Name:</label>
            <div class="col-md-4">
                <input type="text" name="Name" class="form-control" value="@ViewBag.Name">
            </div>
        </div>
        <div class="form-group">
            <label for="Price" class="col-md-2 control-label">Price:</label>
            <div class="col-md-4">
                <input type="text" name="Price" class="form-control" value="@ViewBag.Price" />
            </div>
        </div>
        <div class="form-group">
            <label for="EnginePower" class="col-md-2 control-label">Engine power:</label>
            <div class="col-md-4">
                <input type="text" name="EnginePower" class="form-control" value="@ViewBag.EnginePower" />
            </div>
        </div>
        <div class="form-group">
            <label for="Number" class="col-md-2 control-label">Number: </label>
            <div class="col-md-4">
                <input type="text" name="Number" class="form-control" value=" @ViewBag.Number" />
            </div>
        </div>
        <div class="form-group">
            <label for="Brand" class="col-md-2 control-label">Brand:</label>
            <div class="col-md-4">
                <input type="text" name="Brand" class="form-control" value="@ViewBag.Brand">
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @* <input type="submit" class="btn btn-default" value="Submit"/> *@
                <span class="col-md-offset-2 col-md-10">
                    <button type="submit" value="Submit" name="Submit">Edit</button>
                    <button type="submit" value="Cancel" name="Cancel">Cancel</button>
                </span>
            </div>
        </div>
    </form>
</body>
<html>
