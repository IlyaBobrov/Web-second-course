@model Program_5.ViewModels.IndexViewModel
@{
    ViewData["Title"] = "Home";
}

<h2>Домашняя страница</h2><br>

@using (Html.BeginForm("Index", "Home", FormMethod.Post))
{
    <label>Искать по бренду: </label>
    <select name="brandId" class="form-control form-control-sm">
        @foreach (Brand brand in ViewBag.Brands)
        {
            <option value="@brand.Id">@brand.Name</option>
        }
    </select>
    <input type="submit" class="btn btn-outline-info"/>
}

<table class="table">
    <tr>
        <td>Название</td>
        <td>Время в сервисе</td>
        <td>Бренд</td>
        <td>Мощность(кВт)</td>
        <td>Цена</td>
    </tr>

    @foreach (Car p in Model.Cars)
    {
        <tr>
            <td>@p.Name</td>
            <td>
                @String.Format("{0} часов, {1} минут(ы), {2} секунд(ы)",
                    p.LifeTime.Hours, p.LifeTime.Minutes, p.LifeTime.Seconds)
            </td>
            <td>@p.Brand.Name</td>
            <td>@p.Power</td>
            <td>@p.Price</td>
        </tr>
    }
</table>